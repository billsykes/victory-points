# Yahoo API Credentials
YAHOO_CONSUMER_KEY=your_consumer_key_here
YAHOO_CONSUMER_SECRET=your_consumer_secret_here

# League Configuration
LEAGUE_ID=your_league_id_here
GAME_KEY=nfl
CURRENT_SEASON=2024

# Optional: Debug mode
DEBUG=false

# Optional: External Links (only shown if defined)
LEAGUE_RULES_URL=
# Note: League URL will be automatically derived from LEAGUE_ID if available

# IR Compliance Configuration
IR_ELIGIBLE_STATUSES=IR,O,PUP,NFI,SUSP,NA
ALWAYS_SEND_IR_REPORT=false

# SECURE Notification Options (Choose ONE - recommended over email)

# Option 1: Slack Webhook (Most Secure)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#fantasy-football

# Option 2: Discord Webhook (Very Secure)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Option 3: SendGrid API (More secure than Gmail)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourleague.com
COMMISSIONER_EMAIL=commissioner@email.com

# Option 4: GitHub Issues (Uses existing repo access)
IR_ISSUES_FOR_ALL_REPORTS=false  # Only create issues for violations
IR_ISSUE_ASSIGNEE=your-github-username  # Optional: auto-assign issues

# Option 5: File Notifications (Always available, most secure)
NOTIFICATION_OUTPUT_DIR=notifications
FILE_NOTIFICATIONS_COMMIT=true  # Set to false to skip committing files

